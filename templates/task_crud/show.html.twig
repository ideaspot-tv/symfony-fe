{% extends 'crud_layout.html.twig' %}

{% block title %}Task{% endblock %}

{% block content %}
    <h1>Task</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ task.summary }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ task.deadline ? task.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsComplete</th>
                <td>{{ task.isComplete ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_crud_index') }}">back to list</a>

    <a href="{{ path('app_task_crud_edit', {'id': task.id}) }}">edit</a>

    {{ include('task_crud/_delete_form.html.twig') }}
{% endblock %}
